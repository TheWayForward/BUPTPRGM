/**app.wxss**/

 @import "weui.wxss";


.page{
 background: #F5F5F5;
}

.stdbtn {
color: rgb(131, 131, 131);
background:linear-gradient(to right, rgba(106, 188, 235, 0.973) , rgba(5, 226, 255, 0.801));
border-radius: 50rpx;
border: 5px solid rgb(245, 245, 245);
filter: drop-shadow(-5rpx 0rpx 10rpx #a8a8a8);

}
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.nv{
  position: fixed;
  width: 100%;
  height: 135rpx;
  text-align: center;
  line-height: 155rpx;
  color: white;
  background:  linear-gradient(to bottom right, #347AB4, #00BFFF);
}

.container.withtab{
  margin: 105rpx 0 0 0;
  /*top: 105rpx;*/
}
.flex-wrp{
  display: flex;
}
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  flex-grow: 1;
  text-align: center;
}
.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.container{
  padding: 0;
  font-size: 14rpx;
  color: #000;
}
.container .feed-item{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}
.container .feed-item .feed-source{
  width: 690rpx;
  left: 0;
  height: 50rpx;
}
.container .feed-item .feed-source .avatar{
  position: relative;
  display: inline-block;
}
.container .feed-item .feed-source a{
  display: inline-block;
  height: 40rpx;
}
.container .feed-item .feed-source .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .feed-item .feed-source text{
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}
.container .feed-item .feed-source .item-more{
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}
.container .feed-item .feed-content{
  padding: 10rpx 0 0 0;
}
.container .feed-item .feed-content .question text{
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}
.container .feed-item .feed-content .answer-body{
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}
.container .feed-item .feed-content .answer-actions{
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
}
.container .feed-item .feed-content .answer-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}
.container .feed-item .feed-content .answer-actions .dot ::after{
  content: "â€¢";
}

.mobi_title{
	font-size: 15px;
	color: #777;
  line-height: 110%;
  font-weight: normal;
	width: 100%;
  padding: 10px;
  background-color: #f3f3f3;
  position: relative;
}
.mobi_icon{
	padding: 0px 1.5px;
  border-radius: 1.5px;
  background-color: #358dff;
  position: relative;
  margin-right: 5px;
}
/*list*/
.list{
	overflow: hidden;
  width: 725rpx;
	padding: 10rpx 10rpx 10rpx -10rpx;
	border-top: 1px solid rgb(228, 228, 228);
	background-color: rgb(228, 228, 228);
  filter: drop-shadow(-5rpx 0rpx 10rpx #e9e9e9);
  border-radius: 15px;
  margin-left: 13rpx;
  margin-bottom: 10rpx;

}
.list-img{
  position: relative;
	float: left;
	width: 180rpx;
  height: 180rpx;
}
.list-img .video-img{
	width: 178rpx;
	height: 178rpx;
  border-radius: 15px;
}
.list-detail{
	position: absolute;
  margin-top: 25rpx;
  margin-left: 220rpx;
  margin-right: 30rpx;
}

.list-title text{
	word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
	font-size: 17px;
  color: #333;
	font-weight: bold;
  line-height: 120%;
  letter-spacing: 3rpx;
}
.list-tag view.state{
    display: block;
    font-size: 11px;
    color: #ff6666;
    width: 70rpx;
    padding: 2rpx;
    border: 1px solid rgb(92, 92, 92);
    border-radius: 5rpx;
    text-align: center;
    margin-top: 16rpx;
		float: left;
}
.list-tag .join{
	font-size: 13px;
  line-height: 120%;
  color: #bbb;
  position: absolute;
  display: inline;
  margin: 19rpx 0 0 40rpx;
}
.list-tag .list-num{
	font-size: 16px;
  color: #81aaf7;
  
}
.list-info{
	font-size: 13px;
  color: rgb(168, 168, 168);
  line-height: 100%;
  font-weight: normal;
	margin-top: 70rpx;
}

